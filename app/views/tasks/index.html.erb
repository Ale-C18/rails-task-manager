<h1>To Do List</h1>
<ul style="list-style: none">
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" name="" id="" <%= "checked" if task.completed %>>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
  <% end %>
</ul>

